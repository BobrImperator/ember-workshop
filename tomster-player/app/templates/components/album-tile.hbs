<div class="row">
  <div class="col-xs-12">
    <h4>{{attrs.album.title}}</h4>
    <hr/>
  </div>
</div>

<div class="row">
  <div class="col-xs-3">
    <img src="{{attrs.album.coverUrl}}" width="100%" class="img-rounded">
  </div>
  <div class="col-xs-9">
    <ol class="song-list">
      {{#each attrs.album.songs as |song|}}
        <li>
          {{song-tile song=song}}
        </li>
      {{/each}}
    </ol>
  </div>
</div>

{{#each attrs.album.comments as |comment|}}
  {{comment.text}}
{{/each}}

<div class="row">
  <div class="col-xs-12">
    <hr/>
    {{new-comment album=attrs.album}}
  </div>
</div>