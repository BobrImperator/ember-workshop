<form onsubmit={{action "createComment"}}>
  <div class="form-group">
    <label for="rating-select">Rating</label>
    <select class="form-control {{if hasVisibleRatingErrors "is-invalid" }}" id="rating-select" onchange={{action "ratingChanged"}} onblur={{action "ratingFieldTouched"}} data-test-new-comment-rating-input>
      <option></option>
      {{#each ratingOptions as |rating|}}
        <option value={{rating.value}} selected={{rating.selected}}>{{rating.label}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="text-input">Text</label>
    <input type="text" class="form-control {{if hasVisibleTextErrors "is-invalid" }}" id="text-input" rows="3" onkeyup={{action "textChanged"}} onblur={{action "textFieldTouched"}} value={{text}} data-test-new-comment-text-input>
  </div>
  <button type="submit" class="btn btn-primary" data-test-new-comment-submit>Save</button>
</form>