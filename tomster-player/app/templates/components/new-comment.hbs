<form onsubmit={{action "createComment"}}>
  <div class="form-group">
    <label for="rating-select">Rating</label>
    <select class="form-control" id="rating-select" onchange={{action "ratingChanged"}} data-test-new-comment-rating-input>
      <option></option>
      {{#each ratingOptions as |rating|}}
        <option value={{rating.value}} selected={{rating.selected}}>{{rating.label}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="text-input">Text</label>
    <input type="text" class="form-control" id="text-input" rows="3" onkeyup={{action "textChanged"}} value={{text}} data-test-new-comment-text-input>
  </div>
  <button type="submit" class="btn btn-primary" disabled={{submitDisabled}} data-test-new-comment-submit>Save</button>
</form>