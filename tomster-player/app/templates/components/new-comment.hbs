<form onsubmit={{action (action 'createComment')}}>
  {{log comment.errors.rating}}
  {{#form-fieldset isInvalid=(readonly errors.rating) label='Rating'}}
    <select id="song-rating" onchange={{action (action 'ratingChanged')}} class="c-select form-control {{if errors.rating 'form-control-danger'}}">
      <option disabled selected>- select one -</option>
      {{#each ratingOptions as |option|}}
        <option value="{{option.value}}">{{option.label}}</option>
      {{/each}}
    </select>
  {{/form-fieldset}}

  {{#form-fieldset isInvalid=(readonly errors.text) label='Comment'}}
    <textarea id="song-comment" rows="3" onblur={{action (action 'textChanged')}} class="form-control {{if errors.text 'form-control-danger'}}"></textarea>
  {{/form-fieldset}}

  <button type="submit" class="btn btn-primary">Save Comment</button>
  <button class="btn btn-secondary" onclick={{action attrs.on-cancel}}>Cancel</button>
</form>