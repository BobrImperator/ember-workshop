<div class="row">
  <div class="col-xs-12">
    {{#each attrs.items as |item|}}
      {{yield item}}
    {{/each}}
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    {{#if isAdding}}
      {{component newItem on-cancel=(action 'endAdding') on-created=(action 'endAdding')}}
    {{else}}
      <button class="btn btn-primary" onclick={{action (action 'startAdding')}}><i class="fa fa-plus"></i></button>
    {{/if}}
  </div>
</div>