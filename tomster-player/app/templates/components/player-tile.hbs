<div class='row player-tile'>
  <div class="col-xs-3">
    {{play-icon song=song}}
  </div>
  <div class="col-xs-9">
    {{#if song}}
      <img src="{{song.album.coverUrl}}" class="cover-image pull-left img-rounded">
      <p>
        <strong>{{song.title}}</strong>
        {{song.album.title}}
      </p>
    {{/if}}
  </div>
</div>
