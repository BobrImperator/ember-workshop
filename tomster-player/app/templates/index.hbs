<div class="list-group">
  {{#each model as |album|}}
    <div class="list-group-item">
      <div class="row">
        <div class="col">
          <h4 onclick={{action "selectAlbum" album}} role="button">
            {{album.title}}
          </h4>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <img src={{album.coverUrl}} width="100%" class="rounded" alt="Album cover of {{album.title}}">
        </div>
        <div class="col-xs-9">
          <ol class="song-list">
            {{#each album.songs as |song|}}
              <li onclick={{action "selectSong" song}} role="button">
                <span>{{format-duration song.duration}}</span>
                <span>{{song.title}}</span>
              </li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>
  {{/each}}
</div>